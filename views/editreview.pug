extends layout
block content
  .row
  h1 Welcome lets edit a review
  .formHold
    form(method="post")
      each review in indOne
        fieldset
          label(for="name") Your name:
          input(name="name", type="text", value=review.name required)
          label(for="content") Your review:
          input(name="content", type="text", value=review.content required)
          button.button(type="submit") Edit this review