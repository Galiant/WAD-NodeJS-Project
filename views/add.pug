extends layout
block content
    .row
    h1 Leave a review
    .formHold
        h1.itemtitle Add the review form
        form(method="post")
            fieldset
                label(for="name") Your Name:
                input(name="name", type="text", placeholder="Your name" required)
                label(for="content") Write Review:
                input(name="content", type="text", placeholder="Review" required)
                button.button(type="submit") Leave review