extends layout
block content
  .row
  h1 Hi, Please Log in to your account
  .formHold
    form(method="post")
        fieldset
          label(for="name") User name:
          input(name="name", type="text", placeholder="Your user name" required)
          label(for="password") Password:
          input(name="password", type="password", placeholder="Your password" required)
          button.button(type="submit") Log in